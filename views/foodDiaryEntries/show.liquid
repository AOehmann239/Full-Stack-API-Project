{% layout 'layout.liquid' %} {% block content %}
<div class="container-md">
  <article>
    <h2>
      {{ entry.date }}
    </h2>
    <h6>Amount: {{ entry.amount }}</h>
    <h6>Food: {{ entry.food }}</h6>
    {% if entry.owner == userId %}
    <div class="btn-group">
      <a href="/food-diary/{{ entry.id }}/edit" class="btn btn-primary">Edit</a>
      <form action="/food-diary/{{ entry.id }}?_method=DELETE" method="POST">
        <input type="submit" value="Delete" class="btn btn-danger" />
      </form>
    </div>
    {% endif %}
  </article>
</div>
{% endblock %}
