{% layout 'layout.liquid' %} {% block content %}
<div class="container-sm">
  <form action="/food-diary" method="POST">
    <fieldset>
      <legend>Create New Diary Entry</legend>
      <label class="form-label">Date: </label>
      <input
        type="date"
        name="date"
        placeholder="ex: February 10, 2021"
        class="form-control"
      />
      <label class="form-label">Food:</label>
      <input
        type="text"
        name="food"
        placeholder="food entry here"
        class="form-control"
      />
      <label class="form-label">Amount:</label>
      <input
        type="number"
        name="amount"
        min="1"
        max="1000"
        class="form-control"
      />
    </fieldset>
    <input
      type="submit"
      value="Create New Diary Entry"
      class="btn btn-success"
    />
  </form>
</div>
{% endblock %}
