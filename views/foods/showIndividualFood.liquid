{% layout 'layout.liquid' %} {% block content %}
<div class="container-md">
  <legend>Food info</legend>
    <article>
      <p> Name: {{ food.foodName }} </p>
      <p> Protein: {{ food.protein }}(g)</p>
      <p> Fats: {{ food.fats }}(g)</p>
      <p> Carbs: {{ food.carbs }}(g)</p>
      <p> Amount: {{ food.amount }}(g)</p>
      {% if food.owner == userId %}
    <div class="btn-group">
      <a href="/food/{{ food.id }}/edit" class="btn btn-primary">Edit</a>
      <form action="/food/{{ food._id }}?_method=DELETE" method="POST">
        <input type="submit" value="Delete Food" class="btn btn-danger" />
      </form>
    </div>
    {% endif %}
        </form>
      </div>
    </article>
  
  </article>
</div>
{% endblock %}
